<div class="dist">
  <h1> 繳交作業 </h1>

  <%= simple_form_for [@homework, @answer] do |f| %>
    <h3> Title </h3>
    <%= f.input :title, input_html: { class: "form-control" }, label: false %>
    
    <h3> Description </h3> 
    <%= render partial: 'common/editor', locals: { f: f, description: :description} %> 
    
    <h3> Attachment </h3> 
    <%= f.input :attachment, label: "檔案請不要超過50MB" %>
    
    <%= f.submit "Submit", class: "btn btn-primary", data: {disable_with: "Submitting..."} %>
  <% end %>
</div>

